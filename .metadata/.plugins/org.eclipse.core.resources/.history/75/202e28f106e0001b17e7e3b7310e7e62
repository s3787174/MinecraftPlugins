package me.test.WorldEdit.commands;

import org.bukkit.Location;
import org.bukkit.Material;

public class WorldEditFill {

	public WorldEditFill() {
		System.out.println("FILLING HOLES");
	}
		
	public void MathFill(Location pos1, Location pos2, String tempBlock) {
		Location tempLocation1 = pos1.clone();
		Location tempLocation2 = pos2.clone();
		
		Double XDifference;
		Double ZDifference;
		if(pos1.getX() > pos2.getX()) {
			 XDifference = pos1.getX() - pos2.getX(); 
		} else {
			 XDifference = pos2.getX() - pos1.getX(); 
		}
		if (pos1.getZ() > pos2.getZ()) {
			 ZDifference = pos1.getZ() - pos2.getZ(); 
		} else {
			 ZDifference = pos2.getZ() - pos1.getZ(); 
		}
		
		
		System.out.println("DEBUGGING ==================");
		System.out.println("XDiff: " +XDifference);
		System.out.println("YDiff: " +XDifference);

		Location Origin = pos2.clone();
		if (XDifference > 0) {
		for(int X = 0; X < XDifference; X++) {
			for(int Z = 0; Z < ZDifference; Z++) {
				Origin.getBlock().setType(Material.COBBLESTONE);
				Origin.add(0, 0, 1);
			}
			Origin.add(1, 0, 0);
			Origin.subtract(0,0,ZDifference);
		}
		} else {
			for(int X = 0; X < XDifference; X++) {
				for(int Z = 0; Z < ZDifference; Z++) {
					Origin.getBlock().setType(Material.COBBLESTONE);
					Origin.add(0, 0, 1);
				}
				Origin.add(1, 0, 0);
				Origin.subtract(0,0,ZDifference);
			}
			
			
			
		}

	}
	
}
